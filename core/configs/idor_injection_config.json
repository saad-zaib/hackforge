{
  "vulnerability_id": "idor_001",
  "name": "Insecure Direct Object Reference",
  "category": "idor_injection",
  "difficulty_range": [
    1,
    5
  ],
  "description": "IDOR vulnerabilities occur when an application provides direct access to objects based on user-supplied input without proper authorization checks. Attackers can manipulate object identifiers to access unauthorized resources.",
  "variants": [
    "Basic IDOR",
    "Mass Assignment IDOR",
    "Function-level IDOR"
  ],
  "entry_points": [
    "http_get_param",
    "http_post_param",
    "url_path",
    "cookie_value",
    "http_header"
  ],
  "mutation_axes": {
    "filters": {
      "basic": [
        "numeric_increment",
        "numeric_decrement"
      ],
      "medium": [
        "numeric_increment",
        "numeric_decrement",
        "uuid_manipulation"
      ],
      "advanced": [
        "numeric_increment",
        "numeric_decrement",
        "uuid_manipulation",
        "hash_collision",
        "timestamp_manipulation"
      ]
    },
    "contexts": [
      "user_profile",
      "document_access",
      "api_endpoint",
      "file_download",
      "admin_panel"
    ],
    "sinks": [
      "database_query",
      "file_system_access",
      "api_call"
    ],
    "encoding": [
      "none",
      "url_encoding",
      "base64"
    ],
    "output_contexts": [
      "json_response",
      "xml_response",
      "html_response"
    ]
  },
  "variant_configs": [
