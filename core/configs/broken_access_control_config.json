{
  "vulnerability_id": "csrf_001",
  "name": "Cross-Site Request Forgery",
  "category": "broken_access_control",
  "difficulty_range": [
    1,
    5
  ],
  "description": "CSRF vulnerabilities occur when applications do not verify that requests originate from legitimate users. Attackers can trick authenticated users into performing unintended actions.",
  "variants": [
    "Basic CSRF",
    "CSRF with SameSite Bypass",
    "JSON CSRF"
  ],
  "entry_points": [
    "http_get_request",
    "http_post_request",
    "form_submission",
    "api_endpoint"
  ],
  "mutation_axes": {
    "filters": {
      "basic": [
        "no_csrf_token"
      ],
      "medium": [
        "no_csrf_token",
        "weak_token_validation"
      ],
      "advanced": [
        "no_csrf_token",
        "weak_token_validation",
        "samesite_bypass",
        "origin_bypass"
      ]
    },
    "contexts": [
      "password_change",
      "email_change",
      "fund_transfer",
      "admin_action",
      "profile_update"
    ],
    "sinks": [
      "state_change",
      "database_update",
      "file_modification"
    ],
    "encoding": [
      "none",
      "url_encoding",
      "multipart_encoding"
    ],
    "output_contexts": [
      "http_response",
      "redirect",
      "json_response"
    ]
  },
  "variant_configs": [
    {
      "name": "Basic CSRF",
      "parameters": [
        {
          "name": "context",
          "axis": "contexts",
          "default": "password_change"
        },
        {
          "name": "sink",
          "axis": "sinks",
          "default": "state_change"
        }
      ]
    },
    {
      "name": "CSRF with SameSite Bypass",
      "parameters": [
        {
          "name": "context",
          "axis": "contexts",
          "default": "email_change"
        },
        {
          "name": "sink",
          "axis": "sinks",
          "default": "database_update"
        }
      ]
    }
  ]
}